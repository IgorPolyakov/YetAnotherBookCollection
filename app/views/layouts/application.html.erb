<!DOCTYPE html>
<html>
  <head>
    <title>YetAnotherBookCollection</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <%= link_to "Yet Another Book Collection", root_path, class: "navbar-brand" %>
        </div>
        <ul class="nav navbar-nav">
          <li><%= link_to "Sign Up", signup_path %></li>
          <% if current_user %>
          <li><%= link_to "Sign Out", logout_path %></li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
          <% end %>
        </ul>
        <div class="col-sm-3 col-md-3">
          <form class="navbar-form" role="search">
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Search" name="search">
              <div class="input-group-btn">
                <button class="btn btn-default" type="submit">
                  <i class="glyphicon glyphicon-search"></i>
                </button>
              </div>
            </div>
          </form>
        </div>
        <ul class="nav navbar-nav navbar-right">
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Category
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" role="menu">
              <% Category.all.each do |c| %>
              <li class="<%=  'active' if params[:category] == c.name %>">
                <%= link_to c.name, books_path(category: c.name), class: 'link' %>
              </li>
              <% end %>
            </ul>
          </li>
          <% if current_user %>
          <li><%= link_to "Add book", new_book_path %></li>
          <% end %>
        </ul>
      </div>
    </nav>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <div class="container">
      <br><br><br>
      <%= yield %>
    </div>
  </body>
</html>
