<!DOCTYPE html>
<html>
  <head>
    <title>YetAnotherMessageDashboard</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <%= link_to "Book Storage", root_path, class: "navbar-brand" %>
        </div>
        <ul class="nav navbar-nav">
          <li><%= link_to "Sign Up", new_user_registration_path %></li>
          <% if user_signed_in? %>
          <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li><%= link_to "Log in", new_user_session_path %></li>
          <% end %>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Category
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" role="menu">
              <% Category.all.each do |c| %>
              <li class="<%=  'active' if params[:category] == c.name %>">
                <%= link_to c.name, books_path(category: c.name), class: 'link' %>
              </li>
              <% end %>
            </ul>
          </li>

          <% if user_signed_in? %>
          <li><%= link_to "Add book", new_book_path %></li>
          <% end %>
        </ul>
      </div>
    </nav>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <div class="container">
      <br><br><br>
      <%= yield %>
    </div>
  </body>
</html>
